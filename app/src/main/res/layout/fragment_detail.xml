<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/detail_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_theme_light_background"
    tools:context=".ui.core.detail.DetailFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/fragment_margin_12dp">
            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/fragment_margin_12dp"
                app:cardCornerRadius="@dimen/fragment_margin_12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/ivflower"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:background="@color/md_theme_light_primaryContainer"
                        android:scaleType="fitCenter"
                        android:contentDescription="@string/image_flower"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvTitleInput"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/app_name"
                        android:textSize="17sp"
                        android:layout_marginTop="@dimen/fragment_margin_12dp"
                        app:layout_constraintTop_toBottomOf="@id/ivflower"
                        android:fontFamily="@font/poppins_semibold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/tvScientific"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="28dp"
                        android:layout_marginTop="@dimen/fragment_margin_12dp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="@string/scientific_name"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvTitleInput" />

                    <TextView
                        android:id="@+id/tvScinceInput"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="28dp"
                        android:layout_marginStart="4dp"
                        android:fontFamily="@font/poppins_medium"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/tvScientific"
                        app:layout_constraintTop_toTopOf="@id/tvScientific" />

                    <TextView
                        android:id="@+id/tvAsal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:layout_marginTop="4dp"
                        android:layout_marginStart="28dp"
                        android:text="@string/tempat_asal"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvScinceInput" />

                    <TextView
                        android:id="@+id/tvAsalInput"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="28dp"
                        android:fontFamily="@font/poppins_medium"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/tvAsal"
                        app:layout_constraintTop_toTopOf="@id/tvAsal" />

                    <TextView
                        android:id="@+id/tvBunga"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="28dp"
                        android:layout_marginTop="4dp"
                        android:text="@string/tempat_berbunga"
                        app:layout_constraintTop_toBottomOf="@id/tvAsalInput"
                        android:fontFamily="@font/poppins_medium"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:id="@+id/tvBungaInput"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="28dp"
                        android:fontFamily="@font/poppins_medium"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/tvBunga"
                        app:layout_constraintTop_toTopOf="@id/tvBunga" />

                    <TextView
                        android:id="@+id/tvMusim"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="28dp"
                        android:layout_marginTop="4dp"
                        android:text="@string/musim_berbunga"
                        app:layout_constraintTop_toBottomOf="@id/tvBungaInput"
                        android:fontFamily="@font/poppins_medium"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <TextView
                        android:id="@+id/tvMusimInput"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="28dp"
                        android:paddingBottom="12dp"
                        android:fontFamily="@font/poppins_medium"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/tvMusim"
                        app:layout_constraintTop_toTopOf="@id/tvMusim" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/fragment_margin_12dp"
                app:cardCornerRadius="8dp"
                app:layout_constraintTop_toBottomOf="@id/cardView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/fragment_margin_18dp"
                    android:layout_marginEnd="28dp">

                    <ImageView
                        android:id="@+id/icIcon"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="28dp"
                        android:padding="@dimen/fragment_margin_12dp"
                        android:src="@drawable/book"
                        android:contentDescription="@string/icon_description"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvDesc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_semibold"
                        android:layout_marginStart="@dimen/fragment_margin_18dp"
                        android:text="@string/description"
                        app:layout_constraintBottom_toBottomOf="@+id/icIcon"
                        app:layout_constraintStart_toEndOf="@+id/icIcon"
                        app:layout_constraintTop_toTopOf="@+id/icIcon" />

                    <TextView
                        android:id="@+id/tvDescInput"
                        android:layout_width="0dp"
                        android:fontFamily="@font/poppins_medium"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="@+id/icIcon"
                        app:layout_constraintTop_toBottomOf="@+id/icIcon"
                        app:layout_constraintEnd_toEndOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />
</androidx.constraintlayout.widget.ConstraintLayout>